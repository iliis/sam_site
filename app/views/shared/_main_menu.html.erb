<% entries = {"news" => "home", "projects" => "projects", "about me" => "about"} %>

<% entries["images"] = "images" if authenticated? %>

//
<% entries.each do |text, dest| %>
  <% if current_page?(url_for(:controller => dest)) %>
    <b><%= text.upcase %></b>
  <% else %>
    <%= link_to text.upcase, url_for(:controller => dest) %>
  <% end %>
  //
<% end %>
